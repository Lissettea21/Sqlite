<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Sqlite.Elemento">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Eliminar / actualizar estudiantes" />

            <Label Text="Ventana Login"/>
            
            <Entry x:Name="txtNombre" Placeholder="Ingrese su Nombre"/>
            <Entry x:Name="txtUsuario" Placeholder="Ingrese su Usuario"/>
            <Entry x:Name="txtContraseña" Placeholder="Ingrese su Contraseña" IsPassword="True"/>

            <Button x:Name="btnActualizar" Text="Actualizar" Clicked="btnActualizar_Clicked"/>
            <Button x:Name="btnEliminar" Text="Eliminar" Clicked="btnEliminar_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>